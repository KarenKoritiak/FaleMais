<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Telezir</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <div class="container">

            <div class="page-header">
                <h1 class="muted">
                    Telzir
                    <span class="glyphicon glyphicon-earphone"></span>
                </h1>

                <div class="navbar navbar-default" role="navigation">
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li class="@( ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active" : "")">
                                <a href="@Url.Action("index", "home");">Home</a>
                            </li>
                            <li class="@( ViewContext.RouteData.Values["controller"].ToString() == "Tarifa" ? "active" : "")">
                                <a href="@Url.Action("index", "tarifa");">Tarifas</a>
                            </li>
                            <li class="@( ViewContext.RouteData.Values["controller"].ToString() == "Contato" ? "active" : "")">
                                <a href="@Url.Action("index", "contato");">Contato</a>
                            </li>
                            <li>
                                <a href="@Url.Action("index", "login", new { area = "admin"});">Área Interna</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>


            @RenderBody()

            <div class="footer">
                <p>© Telzir 2014</p>
            </div>

        </div>


        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
