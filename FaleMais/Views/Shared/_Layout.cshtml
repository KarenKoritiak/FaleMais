<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Telezir</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/jquery",
                        "~/bundles/jquerybootstrap")

        @RenderSection("Scripts", required: false)
    </head>
    <body>
        <div class="container">

            <div class="page-header">
                <h1 class="muted">
                    Telzir
                    <span class="glyphicon glyphicon-earphone"></span>
                </h1>

                <div class="navbar navbar-default" role="navigation">
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li class="@( ViewContext.RouteData.Values["controller"].ToString().ToLower() == "home" ? "active" : "")">
                                <a href="@Url.Action("index", "home")">Home</a>
                            </li>
                            <li class="@( ViewContext.RouteData.Values["controller"].ToString().ToLower() == "tarifa" ? "active" : "")">
                                <a href="@Url.Action("index", "tarifa")">Tarifas</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            @RenderBody()

            <div class="footer">
                <hr />
                <p>© Telzir 2014</p>
            </div>

        </div>

    </body>
</html>
